@model IEnumerable<Client_Home.Models.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-content" id="main-content-Account">
    <div class="page-header">
        <h2 class="header-title">Danh sách tài khoản</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Quản lý hệ thống</a>
                <span class="breadcrumb-item active">Danh sách tài khoản</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-5">
                    <div class="d-md-flex">
                        <div class="m-b-10">
                            <select class="custom-select" id="idrole" name="idrole"  style="min-width: 200px;" asp-items="ViewBag.QuyenTruyCap">
                                <option selected>Chọn quyền truy cập</option>
                            </select>
                        </div>
                        <div class="m-b-10">
                            <select class="custom-select" id="idstatus" name="idstatus" style="min-width: 200px;" asp-items="ViewBag.isStatus">
                                <option selected>Chọn trạng thái</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 text-right">
                    <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="ExportToExcel">
                        <button class="btn btn-primary">
                            <i class="anticon anticon-file-excel m-r-5"></i>
                            <span>Xuất file excel</span>
                        </button>
                    </a>
                </div>
                <div class="col-lg-3 text-right">
                    <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Create">
                        <button class="btn btn-primary">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm tài khoản</span>
                        </button>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>
                                <div class="checkbox">
                                    <input id="checkAll" type="checkbox">
                                    <label for="checkAll" class="m-b-0"></label>
                                </div>
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                Mật khẩu
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Salt)
                            </th>
                            <th>
                                Họ và tên
                            </th>
                            <th>
                                Lần đăng nhập cuối
                            </th>
                            <th>
                                Ngày tạo
                            </th>
                            <th>
                                Quyền
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model != null)
                        {
                            int i = 1;
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="checkbox">
                                            <input id="@("check-item-" + i)" type="checkbox">
                                            <label for="@("check-item-" + i)" class="m-b-0"></label>
                                        </div>
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Salt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Fullname)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Lastlogin)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Createdate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Role.Roleid)
                                    </td>

                                    <td class="text-right">
                                        <a asp-area="Admin" asp-controller="AdminCustomers" asp-action="Edit" asp-route-id="@item.Accountid">
                                            <button class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                                <i class="anticon anticon-edit"></i>
                                            </button>
                                        </a>
                                        <button class="btn btn-icon btn-hover btn-sm btn-rounded">
                                            <i class="anticon anticon-delete"></i>
                                        </button>
                                    </td>
                                </tr>
                                i++;
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
