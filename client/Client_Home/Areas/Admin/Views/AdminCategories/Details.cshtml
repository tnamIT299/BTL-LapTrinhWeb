@model Client_Home.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý sản phẩm</h1>

<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Danh mục sản phẩm</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Quản lý sản phẩm</a>
                <a class="breadcrumb-item" href="#">Danh sách danh mục sản phẩm</a>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin danh mục sản phẩm</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>Tên danh mục</td>
                            <td class="text-dark font-weight-semibold">@Model.CategoryName</td>
                        </tr>
                        <tr>
                            <td>Mô tả</td>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <td>ParentCategory</td>
                            <td>@Model.ParentCategoryId</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CategoryId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
