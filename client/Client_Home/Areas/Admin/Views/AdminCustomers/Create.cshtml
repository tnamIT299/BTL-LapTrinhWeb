@model Client_Home.Models.Customer
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@* @model Client_Home.Areas.DTO.Customers.AddCustomer *@

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<h1>Create</h1>

<h4>Customer</h4>
<hr />
<link href="assets/css/app.min.css" rel="stylesheet">
<!-- page css -->
<link href="~/adminassets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" />
<!-- page js -->
<script src="~/adminassets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
<div class="main-content">
    <form method ="post" asp-action="Create">
        <div class="page-header no-gutters has-tab">
            <div class="d-md-flex m-b-15 align-items-center justify-content-between">
                <div class="media align-items-center m-b-15">
                    <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                    </div>
                    <div class="m-l-15">
                        <h4 class="m-b-0">Thông Tin Cơ Bản</h4>
                    </div>
                </div>
                <div class="m-b-15">
                    <button type="submit" class="btn btn-primary">
                        <i class="anticon anticon-save"></i>
                        <span>Save</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="tab-content m-t-15">
            <div class="tab-pane fade show active" id="">
                <div class="card">
                    <div class="card-body">
                        
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" type="text" pattern="[a-zA-ZÀ-Ỹà-ỹ\s]+" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" type="text" pattern="[a-zA-ZÀ-Ỹà-ỹ\s]+" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="form-row">
                                <div class="col">
                                    <label asp-for="Gender" class="control-label" for ="Gender"></label>
                                    <select asp-for="Gender" class="custom-select" id="Gender">
                                        <option value=0>Nam</option>
                                        <option value=1>Nữ</option>
                                        <option value="2">Khác</option>
                                    </select>
                                </div>
                                <div class="col">
                                     <label asp-for="Birthday" class="control-label"></label>
                                    <input asp-for="Birthday" class="form-control" />
                                    <span asp-validation-for="Birthday" class="text-danger"></span> 
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email"  type="email" class="form-control" placeholder="abc123@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" pattern="[0-9]+" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        
                      

                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

