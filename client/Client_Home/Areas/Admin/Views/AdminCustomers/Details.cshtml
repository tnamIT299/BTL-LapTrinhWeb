@model Client_Home.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý Khách hàng</h1>

<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Khách hàng</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a href="#" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Quản lý Khách hàng</a>
                <a class="breadcrumb-item" href="#">Danh sách khách hàng</a>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin chi tiết</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>Tên</td>
                            <td class="text-dark font-weight-semibold">@Model.FirstName</td>
                        </tr>
                        <tr>
                            <td>LastName</td>
                            <td>@Model.LastName</td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <td>Số điện thoại</td>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <td>Ngày sinh</td>
                            <td>@Model.Birthday</td>
                        </tr>
                        <tr>
                            <td>Điểm thưởng</td>
                            <td>@Model.RewardPoints</td>
                        </tr>
                        <tr>
                            <td>Loại thành viên</td>
                            <td>@Model.Rank</td>
                        </tr>
                        <tr>
                            <td>Giới tính</td>
                            @{
                                string genderText = (Model.Gender != null && Model.Gender == 1) ? "Nữ" : "Nam";
                            }
                            @Html.DisplayFor(modelItem => genderText)
                        </tr>
                        <tr>
                            <td>Mã Khách hàng</td>
                            <td>@Model.UserId</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CustomerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


