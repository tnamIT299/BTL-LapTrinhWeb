@using Azure;
@using DocumentFormat.OpenXml.Spreadsheet;
@using Microsoft.AspNetCore.Mvc.RazorPages;

@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .pagination-container {
        margin-top: 20px;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
    }

        .pagination li {
            margin-right: 10px;
        }

        .pagination a {
            text-decoration: none;
            padding: 8px 16px;
            background-color: #007bff;
            color: #fff;
            border-radius: 4px;
        }

            .pagination a:hover {
                background-color: #0056b3;
            }
</style>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="m-b-10 m-r-15">
    <input id="keyword" type="text" name="keyword" class="form-control" placeholder="Tìm kiếm nhân viên" />
</div>

<div class="table-responsive" id="records_table">
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $('.pagination-container a').on('click', function (e) {
                e.preventDefault(); // Prevent the default navigation behavior

                // Extract the page number from the clicked link
                var pageNumber = $(this).text();

                // Perform your custom action with the page number
                alert('User clicked on page ' + pageNumber);

                $.ajax({
                    url: '/Admin/AdminEmployees/Index',
                    datatype: "json",
                    type: "POST",
                    data: { page: pageNumber, keyword:'aa' },
                    async: true,
                    success: function (result) {
                        $("#records_table").html("");
                        $("#records_table").html(result);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
            var originalData = $("#records_table").html();
            $("#keyword").keyup(function () {
                var strkeyword = $('#keyword').val();
                $.ajax({
                    url: '/Admin/Search/FindEmployee',
                    datatype: "json",
                    type: "POST",
                    data: { keyword: strkeyword },
                    async: true,
                    success: function (result) {
                        if ($('#keyword').val() == '') {
                            console.log("hello");
                            return originalData;
                        }
                        $("#records_table").html("");
                        $("#records_table").html(result);
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });
    </script>
}