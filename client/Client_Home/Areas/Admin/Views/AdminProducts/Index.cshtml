@using Azure;
@using DocumentFormat.OpenXml.Spreadsheet;
@using Microsoft.AspNetCore.Mvc.RazorPages;
@using PagedList.Core.Mvc
@using X.PagedList.Mvc.Core;
@model PagedList.Core.IPagedList<Client_Home.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="main-content">
    <div class="page-header">
        <h2 class="header-title">Danh sách sản phẩm</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Quản lý sản phẩm</a>
                <span class="breadcrumb-item active">Danh sách sản phẩm</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-4">
                    <div class="d-md-flex">
                        <div class="m-b-10">
                            <h3>Danh sách sản phẩm</h3>
                        </div>
                    </div>
                </div>
                <div class="m-b-10 m-r-8">
                    <input id="keyword" type="text" name="keyword" class="form-control" placeholder="Tìm kiếm sản phẩm" />
                </div>
                <div class="col-lg-4 text-right">

                    <a asp-area="Admin" asp-controller="AdminProducts" asp-action="ExportToExcel">
                        <button class="btn btn-primary">
                            <i class="anticon anticon-file-excel m-r-5"></i>
                            <span>Xuất file Excel</span>
                        </button>
                    </a>
                </div>
                <div class="col-lg-2 text-right">

                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            <span>Tác vụ</span>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Create">Thêm thủ công</a>
                            <a class="dropdown-item" asp-area="Admin" asp-controller="AdminProducts" asp-action="Create">Thêm bằng file excel</a>
                            <button id="deleteSeletedItemsButton" class="dropdown-item" title="Xóa các sản phẩm đã chọn">
                                    Xóa các sản phẩm đã chọn
                            </button>
                        </div>
                    </div>
                       
                    @* 
                        <button class="btn btn-primary">
                            <i class="anticon anticon-plus-circle m-r-5"></i>
                            <span>Thêm sản phẩm</span>
                        </button> *@
                    
                </div>


            </div>
            <div class="table-responsive" id="records_table">
                
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            var originalData = $("#records_table").html();
            var baseAjaxUrl = '/Admin/AdminProducts/Index';

            // Function to handle AJAX request
            function performAjaxRequest(keyword) {
                var ajaxUrl = keyword !== '' ? '/Admin/Search/FindProduct' : baseAjaxUrl;

                $.ajax({
                    url: ajaxUrl,
                    datatype: "json",
                    type: "POST",
                    data: { keyword: keyword },
                    async: true,
                    success: function (result) {
                        if (keyword === '') {
                            $("#records_table").html(originalData);
                        } else {
                            $("#records_table").html(result);
                        }
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            }

            // Keyup event handler for the search bar
            $("#keyword").keyup(function () {
                var strKeyword = $('#keyword').val();
                if (strKeyword === '')
                    strKeyword = null;
                performAjaxRequest(strKeyword);
            });

            // Handle page reload
            performAjaxRequest(null);
        });
    </script>
}


